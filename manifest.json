{
  "name": "抓图",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "抓取图片",
  "icons": {
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": "images/icon-64.png",
    "default_title": "抓图",
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "js": ["js/content.js"],
    "matches": ["https://detail.1688.com/*", "https://detail.tmall.com/*", "https://item.taobao.com/*"],
    "run_at": "document_end"
  }],
  "background": {},
  "permissions": [
    "tabs",
    "downloads"
  ]
}
